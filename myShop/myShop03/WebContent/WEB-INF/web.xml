<?xml version="1.0" encoding="UTF-8"?>
<web-app>
  
    <servlet>
        <servlet-name>ProductListServlet</servlet-name>
        <servlet-class>com.lu.servlet.ProductListServlet</servlet-class>
    </servlet>
  
    <servlet-mapping>
        <servlet-name>ProductListServlet</servlet-name>
        <url-pattern>/listProduct</url-pattern>
    </servlet-mapping>
    
    
     <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.lu.servlet.UserLoginServlet</servlet-class>
    </servlet>
  
     <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
  
  
   <servlet>
        <servlet-name>OrderItemAddServlet</servlet-name>
        <servlet-class>com.lu.servlet.OrderItemAddServlet</servlet-class>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>OrderItemAddServlet</servlet-name>
        <url-pattern>/addOrderItem</url-pattern>
    </servlet-mapping>
    
     
    <servlet>
        <servlet-name>OrderItemListServlet</servlet-name>
        <servlet-class>com.lu.servlet.OrderItemListServlet</servlet-class>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>OrderItemListServlet</servlet-name>
        <url-pattern>/listOrderItem</url-pattern>
    </servlet-mapping>
  
  
</web-app>